model Item {
  id          Int        @id @default(autoincrement())
  name        String
  price       Float
  description String?
  imageUrl    String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  categories  Category[]
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String @unique
  items Item[]
}
